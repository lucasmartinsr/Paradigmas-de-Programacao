genero_filme('Volver','Drama').

diretor_filme('Amnésia','Nolan').
diretor_filme('Babel','Inarrítu').
diretor_filme('Capote','Miller').
diretor_filme('Casablanca','Curtiz').
diretor_filme('Matrix','Wachowsk').
diretor_filme('Rebecca','Hitchcock').
diretor_filme('Shrek','Adamson').
