tempo_filme('Volver',121).

diretor(X,Y) :-
    filme(X),
	diretor_filme(X,Y).

genero(X,Y) :-
    filme(X),
    genero(Y),
	genero_filme(X,Y).

filme_ducacao_menor(X, Y) :-
    tempo_filme(X,Z),
    filme(X),
    Z < Y.

filme_lancado_entre(X, Y, Z) :-
    ano_filme(X,K),
    filme(X),
    K > Y,
    K < Z.
classico(X) :-
    ano_filme(X,K),
    filme(X),
    K < 1980.

classico_suspense(X) :-
    filme(X),
    classico(X),
    genero(X,'Suspense').
    
