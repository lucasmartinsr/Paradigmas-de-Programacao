nota(joao,5.0).
nota(maria,6.0).
nota(joana,8.0).
nota(mariana,9.0).
nota(cleuza,8.5).
nota(jose,6.5).
nota(jaoquim,4.5).
nota(mara,4.0).
nota(mary,10.0).


%Nota    de    7.0    a10.0    =    Aprovado.    
%Nota    de    5.0    a6.9    =    Recuperação.    
%Nota    de    0.0    a4.9    =    Reprovado.        


resultado(X,Z) :-
    nota(X,Y),
    (  Y >= 7
    -> Z='Aprovado'
    ; ( (Y =< 6.9),(Y >= 5)
      -> Z='Recuperação'
      ;  Z='Reprovado'
      )
     ).
    
